datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  cep       String
  city      String
  state     String
  role      String   @default("user") // <- adicionamos isso
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
